{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "src",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "types": [
            "cypress",
            "node"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
